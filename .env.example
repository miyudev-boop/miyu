# Application Configuration
APP_NAME=AI_Agent
APP_PORT=3000
NODE_ENV=development
DEFAULT_LANGUAGE=en
TIMEZONE=UTC

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_agent_db
PRISMA_LOG_LEVEL=info

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook

# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET_KEY=your_twitter_api_secret_key
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_WEBHOOK_URL=https://yourdomain.com/twitter/webhook

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION_ID=your_openai_organization_id

# Solana Blockchain Configuration
SOLANA_NETWORK=mainnet-beta # Options: devnet, testnet, mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WALLET_PRIVATE_KEY=your_solana_wallet_private_key

# API Key Management
API_KEY_EXPIRATION_DAYS=30

# Webhook Configuration
WEBHOOK_SECRET_KEY=your_webhook_secret_key
NOTIFICATION_URL=https://yourdomain.com/notifications

# Security Settings
JWT_SECRET=your_jwt_secret
HASH_SALT_ROUNDS=10
SESSION_TIMEOUT=3600 # In seconds

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Email Service (Optional)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.yourservice.com
EMAIL_PORT=587
EMAIL_USER=your_email_address
EMAIL_PASSWORD=your_email_password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Notification Service
NOTIFICATION_RETRY_LIMIT=3
NOTIFICATION_BATCH_SIZE=50

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=90

# Backup and Deployment
BACKUP_LOCATION=/path/to/backups
DEPLOYMENT_STRATEGY=rolling

# Message Metadata Defaults
MESSAGE_MAX_LENGTH=500
MESSAGE_LANGUAGE=en

# Transaction Settings
TRANSACTION_MIN_AMOUNT=0.001
TRANSACTION_CURRENCY=SOL
TRANSACTION_FEE_PERCENTAGE=0.5
TRANSACTION_CONFIRMATION_TIMEOUT=60 # In seconds

# Web3 Features
WEB3_ENABLED=true
BLOCKCHAIN_RETRY_LIMIT=5

# Feature Toggles
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_INTEGRATIONS=true

# Miscellaneous
CACHE_EXPIRY_SECONDS=3600
MAX_CONCURRENT_REQUESTS=100

