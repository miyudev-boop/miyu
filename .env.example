# Telegram Bot Configuration
BOT_API_KEY=your_telegram_bot_api_key
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Application Configuration
APP_NAME=AI_Agent
APP_PORT=3000
NODE_ENV=development
DEFAULT_LANGUAGE=en
TIMEZONE=UTC

# Solana Blockchain Configuration
SOLANA_NETWORK=mainnet-beta # Options: devnet, testnet, mainnet-beta
SOLANA_WALLET_PRIVATE_KEY=your_solana_wallet_private_key

# Security Settings
JWT_SECRET=your_jwt_secret
SESSION_TIMEOUT=3600 # In seconds

# Web3 Features
WEB3_ENABLED=true
BLOCKCHAIN_RETRY_LIMIT=5

# Feature Toggles
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_INTEGRATIONS=true
