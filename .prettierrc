{
  "semi": true,
  "trailingComma": "all", 
  "singleQuote": true,
  "printWidth": 100, 
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "proseWrap": "preserve", 
  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": "*.prisma",
      "options": {
        "tabWidth": 4 
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always" 
      }
    }
  ]
}

